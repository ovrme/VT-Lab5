<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorCoffeePrimary"
            android:padding="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/logo_add"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="@string/logo_description"
                android:src="@drawable/img" />

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/form_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </LinearLayout>

        <!-- Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Amount -->
                <TextView
                    android:id="@+id/label_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_amount"
                    style="@style/Widget.App.TextView.Label" />

                <EditText
                    android:id="@+id/editTextAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:autofillHints="currency"
                    android:hint="@string/hint_amount"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:background="@drawable/edit_text_background"
                    tools:ignore="LabelFor" />

                <!-- Currency -->
                <TextView
                    android:id="@+id/label_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_currency"
                    style="@style/Widget.App.TextView.Label" />

                <Spinner
                    android:id="@+id/spinner_currency"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:entries="@array/currencies"
                    android:spinnerMode="dropdown"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp" />

                <!-- Category -->
                <TextView
                    android:id="@+id/label_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_category"
                    style="@style/Widget.App.TextView.Label" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <Spinner
                        android:id="@+id/spinner_category"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:entries="@array/expense_categories"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp" />

                    <ImageButton
                        android:id="@+id/button_add_category"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/button_add_category"
                        android:src="@drawable/ic_add"
                        android:background="@drawable/edit_text_background"
                        tools:ignore="ImageContrastCheck" />

                </LinearLayout>

                <!-- Date -->
                <TextView
                    android:id="@+id/label_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_date"
                    style="@style/Widget.App.TextView.Label" />

                <EditText
                    android:id="@+id/input_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:focusable="false"
                    android:hint="@string/hint_date"
                    android:inputType="none"
                    android:padding="12dp"
                    android:background="@drawable/edit_text_background"
                    tools:ignore="Autofill,LabelFor" />

                <!-- Remark -->
                <TextView
                    android:id="@+id/label_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_remark"
                    style="@style/Widget.App.TextView.Label" />

                <EditText
                    android:id="@+id/editTextDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="top"
                    android:hint="@string/hint_remark"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:minLines="3"
                    android:maxLines="5"
                    android:padding="12dp"
                    android:background="@drawable/edit_text_background"
                    tools:ignore="Autofill,LabelFor" />

                <!-- Save Button -->
                <Button
                    android:id="@+id/buttonSaveExpense"
                    style="@style/Widget.App.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_add_expense" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>